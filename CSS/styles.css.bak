iframe {
    display: block;
    margin: 20px auto;
    width: 80%;
    height: 100vh;
    border: none;
}
.fa {
	padding: 30px;
	font-size: 30px;
	text-align: center;
	text-decoration: none;
	display: inline-flex; /* Ensure the container takes only as much space as the content */
	align-items: center; /* Center the icon vertically */
	justify-content: center; /* Center the icon horizontally */
}
/* Define the default color for the icons */
.fa-github {
    color: #333; /* Default color for GitHub icon */
}

.fa-linkedin {
    color: #333; /* Default color for LinkedIn icon */
}


/* Change background color or add box-shadow on hover */
.fa-github:hover {
	color: white;
    background-color: #5d2a89; /* Change background color to purple on hover */
    border-radius: 20%; /* Make the background circular */
    width: 50px; /* Set width and height to ensure a perfect circle */
    height: 50px; /* Set width and height to ensure a perfect circle */
    display: inline-flex; /* Ensure the container takes only as much space as the content */
    align-items: center; /* Center the icon vertically */
    justify-content: center; /* Center the icon horizontally */
}

.fa-linkedin:hover {
	color: white;
    background-color: #0a66c2; /* Change background color to blue on hover */
    border-radius: 20%; /* Make the background circular */
    width: 5px; /* Set width and height to ensure a perfect circle */
    height: 5px; /* Set width and height to ensure a perfect circle */
    display: inline-flex; /* Ensure the container takes only as much space as the content */
    align-items: center; /* Center the icon vertically */
    justify-content: center; /* Center the icon horizontally */
}
